import Education from '@/components/Education.astro'
import Projects from '@/components/Projects.astro'
---

<PageLayout meta={{ title: 'Home' }}>
	<div class='flex w-full flex-col gap-y-10'>
		<Me />
		<About />
		<Projects />
		<Experience />
		<Certifications />
		<Education />
	</div>
</PageLayout>

