---
import ProjectCard from './ProjectCard.astro'
import Section from './Section.astro'
---

<Section title='Projects'>
	<div class='flex flex-col gap-y-3 sm:flex-row sm:gap-x-3 sm:gap-y-0'>
		<ProjectCard
			href='https://www.google.com'
			heading='Vitai'
			subheading='Modern Vitest Runner Powered by AI'
			imagePath='/src/assets/vitai.avif'
			altText='Example'
			class='w-full sm:w-1/2'
		/>
		<ProjectCard
			href='https://www.google.com'
			heading='Imafy'
			subheading='Image restored app using AI'
			imagePath='/src/assets/imafy.avif'
			altText='Image restored app using AI'
			class='w-full sm:w-1/2'
		/>
	</div>
</Section>
